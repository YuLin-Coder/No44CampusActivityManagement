	</select>
	
	
	<!-- 
	 1.方法描述：查询分页 非插件
	 2.参数：map
	-->
	<select id="find" resultMap="ResultMapManage" parameterType="map">
		select <include refid="Manage_field" />
 		from manage where 1=1
 		<include refid="Manage_where" /> 
 		order by id desc limit #{pageOffset},#{pageSize}
	</select>
	
